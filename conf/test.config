/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run sanger-tol/ascc -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 4
    max_memory = '10.GB'
    max_time   = '6.h'

    // Input params
    outdir                              = "ASCC-TEST"

    input                               = "${projectDir}/assets/github_testing/samplesheet.csv"

    // Input data normally in
    reads_path                          = ["https://tolit.cog.sanger.ac.uk/test-data/resources/ascc/asccTinyTest_V2/pacbio/Pyoeliiyoelii17XNL_pbtools_simulated_pacbio_reads.fa.gz"]
    reads_type                          = "hifi"
    reads_layout                        = "SINGLE"

    // Barcode file is shipped with pipeline.
    pacbio_barcode_file                 = "${projectDir}/assets/ascc_database_fasta/pacbio_adaptors.fa"

    pacbio_barcode_names                = "bc2001,bc2009"
    sample_id                           = "Pyoeliiyoelii17XNL"
    scientific_name                     = "Plasmodium yoelii yoelii 17XNL"
    taxid                               = 352914
    kmer_length                         = 7
    dimensionality_reduction_methods    = ["pca", "random_trees"]
    // all available methods
    // "pca,umap,t-sne,isomap,lle_standard,lle_hessian,lle_modified,mds,se,random_trees,kernel_pca,pca_svd,autoencoder_sigmoid,autoencoder_linear,autoencoder_selu,autoencoder_relu,nmf"

    nt_database_path                    = "${launchDir}/BLASTN/blastdb/"
    nt_database_prefix                  = "tiny_plasmodium_blastdb.fa"
    nt_kraken_database_path             = "${launchDir}/KRAKEN2/kraken2"
    ncbi_taxonomy_path                  = "${launchDir}/NCBI_TAXONOMY/"
    ncbi_ranked_lineage_path            = "${launchDir}/NCBI_TAXONOMY/rankedlineage.dmp"
    busco_lineages_folder               = "${launchDir}/BUSCO_LINEAGES/"
    busco_lineages                      = "eukaryota_odb10"
    fcs_gx_database_path                = "${launchDir}/FCS_gx/"
    vecscreen_database_path             = "${launchDir}/VECSCREEN/"
    diamond_uniprot_database_path       = "${launchDir}/DIAMOND/diamond.dmnd"
    diamond_nr_database_path            = "${launchDir}/DIAMOND/diamond.dmnd"

    seqkit_sliding                      = 100000
    seqkit_window                       = 6000
    n_neighbours                        = 13
    filter_cutoff                       = 1000000000

    run_essentials                      = "both"
    run_kmers                           = "genomic"
    run_tiara                           = "both"
    run_coverage                        = "organellar"
    run_nt_blast                        = "both"
    run_nr_diamond                      = "both"
    run_uniprot_diamond                 = "both"
    run_kraken                          = "both"
    run_fcsgx                           = "both"
    run_fcs_adaptor                     = "both"
    run_vecscreen                       = "both"
    run_btk_busco                       = "off"
    run_pacbio_barcodes                 = "both"
    run_organellar_blast                = "genomic"
    run_autofilter_assembly             = "genomic"
    run_create_btk_dataset              = "both"
    run_merge_datasets                  = "genomic"

}
